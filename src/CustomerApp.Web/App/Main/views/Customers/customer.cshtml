<form id="frm_create_customer" name="customerCreateForm" novalidate>
    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog" style="background-color:whitesmoke">
            <div class="modal-header">
                <h4 class="modal-title">Customer</h4>
            </div>
            <div class="modal-body">
                <div class="form-group"  ng-show="vm.showID" >
                    <label>@L("Id")</label>
                    <input autofocus class="form-control" type="text" maxlength="50" name="CustomerName" ng-model="vm.customer.Id" />
                </div>
                <div class="form-group">
                    <label>@L("CustomerName")</label>
                    <input autofocus class="form-control" type="text" maxlength="50" name="CustomerName" ng-model="vm.customer.CustomerName" required />
                </div>
                <div class="form-group">
                    <label>@L("PhoneNumber")</label>
                    <input autofocus class="form-control" type="number" max=2000000000 name="PhoneNumber" ng-model="vm.customer.PhoneNumber" required />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary blue" ng-click="vm.save(vm)" ng-show="vm.showSubmit" ng-disabled="customerCreateForm.$invalid"><i class="fa fa-save"></i><span> @L("Save")</span></button>
                <button type="submit" class="btn btn-primary blue" ng-click="vm.edit(vm)" ng-show="vm.showEdit" ng-disabled="customerCreateForm.$invalid"><i class="fa fa-edit"></i><span> @L("Edit")</span></button>

            </div>
        </div>
    </div>
</form>

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card main-content">
            <div class="header">
                <h2>
                    @L("Customers")
                </h2>
                <ul class="header-dropdown m-r--5">
                    <i class="fa fa-spin fa-spinner" ng-if="isTableLoading"></i>
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="javascript:void(0);" class="waves-effect waves-block()" ng-click="vm.refresh();"><i class="material-icons">refresh</i>Refresh</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body table-responsive">
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Customer Name</th>
                            <th>Phone Number</th>
                            <th>@L("Actions")</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="customer in vm.customers">
                            <td>{{customer.id}}</td>
                            <td>{{customer.customerName}}</td>
                            <td>{{customer.phoneNumber}}</td>
                            <td class="dropdown">
                                <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                    <i class="material-icons">menu</i>
                                </a>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="javascript:void(0);" class="waves-effect waves-block" ng-click="vm.openModalforUpdate(customer)"><i class="material-icons">create</i>Edit</a></li>
                                    <li><a href="javascript:void(0);" class="waves-effect waves-block" ng-click="vm.delete(customer.id,customer.customerName)"><i class="material-icons">delete_sweep</i>Delete</a></li>
                                </ul>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <button type="button" data-toggle="modal" class="btn btn-primary btn-circle waves-effect waves-circle waves-float pull-right" ng-click="vm.openModelforNew()">
                    <i class="material-icons">add</i>
                </button>
            </div>
        </div>
    </div>
</div>