<form id="frm_create_customer" name="customerCreateForm" novalidate>
    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog" style="background-color:whitesmoke">
            <div class="modal-header">
                <h4 class="modal-title">Customer</h4>
            </div>
            <div class="modal-body">

                <div class="form-group">
                    <label>@L("CustomerName")</label>
                    <input autofocus class="form-control" type="text" name="CustomerName" ng-model="vm.customer.CustomerName" />
                </div>
                <div class="form-group">
                    <label>@L("PhoneNumber")</label>
                    <input autofocus class="form-control" type="number" name="PhoneNumber" ng-model="vm.customer.PhoneNumber" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary blue" ng-click="vm.save(vm)" ng-show="vm.showSubmit" ng-disabled="customerCreateForm.$invalid"><i class="fa fa-save"></i><span> @L("Save")</span></button>
                <button type="submit" class="btn btn-primary blue" ng-click="vm.edit(vm)" ng-show="vm.showEdit" ng-disabled="customerCreateForm.$invalid"><i class="fa fa-edit"></i><span> @L("Edit")</span></button>

            </div>
        </div>
    </div>
</form>


